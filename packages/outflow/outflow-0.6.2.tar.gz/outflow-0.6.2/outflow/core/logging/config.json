{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "rich": {
            "()": "outflow.core.logging.OutflowFormatter"
        }
    },

    "handlers": {
        "console": {
            "class": "rich.logging.RichHandler",
            "level": "DEBUG",
            "formatter": "rich",
            "show_path": false
        },
        "null": {
            "class": "logging.NullHandler",
            "level": "DEBUG"
        },
        "file": {
            "class": "outflow.core.logging.RotatingFileHandlerPerUser",
            "level": "DEBUG",
            "formatter": "rich",
            "filename": "debug.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }

    },

    "loggers": {
        "": {
            "handlers": ["null"]
        },
        "outflow": {
            "level": "INFO",
            "handlers": ["console"]
        },
        "sqlalchemy": {
            "level": "WARNING",
            "handlers": ["console"]
        },
        "alembic": {
            "level": "INFO",
            "handlers": ["console"]
        }
    }
}
