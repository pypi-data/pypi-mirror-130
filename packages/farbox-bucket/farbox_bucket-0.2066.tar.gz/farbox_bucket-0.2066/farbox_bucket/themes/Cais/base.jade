html
	+h.i18n('Home', '首页', 'zh_cn')
	+h.i18n('Categories', '分类', 'zh_cn')
	+h.i18n('Archive', '归档', 'zh_cn')
	+h.i18n('Tags', '标签', 'zh_cn')
	+h.i18n('About', '关于', 'zh_cn')
	+h.i18n('Links', '友链', 'zh_cn')

	head
		+h.headers

		block title
			title= posts.post.title or site.title

		+h.load('/template/css/markdown.scss')
		+h.load('/template/css/style.scss')

	body

		.sidebar: .sidebar_body
		    nav_data = (['首页', '/'], ['归档', '/archive'],['订阅', '/feed'])
			//+h.get_nav(nav_data, load_front_sources=False)
			+site.just_nav

		.header
			.logo_title
				.title.animated.fadeInDown
					h1(title="")
						a(href=h.url("/")) {{ site.title }}
					if site.raw_content
						.description.animated.fadeInDown
							p= '&#9829; %s &#9829;' % site.raw_content[:100]

			+site.socials


		block content


		.footer
            a(target="_blank", href="{{request.url_root}}")
                span All content copyright {{site.title}} © 2015 • All rights reserved.
            span Designed by
                a(href="https://www.caicai.me") CaiCai
            .by
                a(href="https://farBox.com/?s=f", target="_blank") Proudly published with FarBox&#65281;

		+h.auto_sidebar('right')
		+h.load('font')
